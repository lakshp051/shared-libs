src = library identifier: "com-lp-jenkin@master",
        retriever: modernSCM(
            [
                $class: 'GitSCMSource',
                remote: "https://github.com/lakshp051/shared_libs.git"
            ]
        )

def lpConstants = src.com.lp.jenkins.Constants.new()
def show = src.com.lp.jenkins.showMessage.new()

pipeline {
    agent {
        label 'local'
    }
    environment {
        BIN_DIR = "bin"
    }
    parameters {
        string(defaultValue: '/usr/home', name: 'userHome')
    }
    stages {
        stage('Build') {
            steps {
                script {
                    println(lpConstants.USER_HOME)
                    show.showMsg()
                    printMessage()
                }
            }
        }
    }
}
