retry(5){
lib = library(identifier: "com-lp-jenkin@master",
        retriever: modernSCM(
            [
                $class: 'GitSCMSource',
                remote: "https://github.com/lakshp051/shared_libs.git"
            ]
        )
    )
}

def ll = lib.com.lp.jenkins.jenkinsTools.new()

pipeline {
    
    agent {
        label 'local'
    }
    
    stages {
        stage('Build') {
            steps {
                script {
                    println(ll.message)
                }
            }
        }
    }
}
